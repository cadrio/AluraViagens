<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ConclusaoCompraActivity">



    <ImageView
        android:id="@+id/conclusao_imageview_framelaranja"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:background="@android:color/holo_orange_dark"
        />

    <TextView
        android:id="@+id/conclusao_textView_parabens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parabéns!"
        android:textSize="30sp"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/conclusao_imageview_framelaranja"
        app:layout_constraintStart_toStartOf="@id/conclusao_imageview_framelaranja"
        app:layout_constraintEnd_toEndOf="@id/conclusao_imageview_framelaranja"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/conclusao_textView_comprarealizada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compra realizada com sucesso! :)"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="@+id/conclusao_imageview_framelaranja"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/conclusao_imageview_framelaranja"/>

    <TextView
        android:id="@+id/conclusao_textView_confiraresumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confira o resumo da compra:"
        android:textSize="14sp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conclusao_imageview_framelaranja"
        />

    <ImageView
        android:id="@+id/conclusao_imageview_banner"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/conclusao_textView_confiraresumo"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/sao_paulo_sp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/conclusao_textView_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="São Paulo"
        app:layout_constraintTop_toBottomOf="@id/conclusao_imageview_banner"
        app:layout_constraintHorizontal_bias="0"
        android:layout_margin="8dp"/>


    <TextView
        android:id="@+id/conclusao_textView_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="08/12 - 10/12 de 2021"
        app:layout_constraintTop_toBottomOf="@id/conclusao_textView_local"
        app:layout_constraintHorizontal_bias="0"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/conclusao_textView_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="R$ 243,99"
        app:layout_constraintTop_toBottomOf="@id/conclusao_textView_data"
        app:layout_constraintHorizontal_bias="0"
        android:layout_margin="8dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>