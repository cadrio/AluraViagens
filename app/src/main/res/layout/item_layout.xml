<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/Item_layout_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="558dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/itempacote_imageView_fotoCidade"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                tools:src="@sample/pacotes.json/pacotes/imagem" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/itempacote_textView_precos"
                app:layout_constraintEnd_toEndOf="@id/itempacote_imageView_fotoCidade"
                app:layout_constraintStart_toStartOf="@id/itempacote_imageView_fotoCidade"

                app:layout_constraintTop_toTopOf="@id/itempacote_imageView_fotoCidade" />

            <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="@android:color/holo_orange_dark"
                app:layout_constraintBottom_toBottomOf="@id/itempacote_imageView_fotoCidade"
                app:layout_constraintEnd_toEndOf="@id/itempacote_imageView_fotoCidade"
                app:layout_constraintStart_toStartOf="@id/itempacote_imageView_fotoCidade"
                app:layout_constraintTop_toTopOf="@id/itempacote_imageView_fotoCidade"
                app:layout_constraintVertical_bias="1" />

            <TextView
                android:id="@+id/itempacote_textView_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@android:drawable/screen_background_dark_transparent"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/itempacote_imageView_fotoCidade"
                app:layout_constraintEnd_toEndOf="@id/itempacote_imageView_fotoCidade"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/itempacote_imageView_fotoCidade"
                app:layout_constraintTop_toTopOf="@id/itempacote_imageView_fotoCidade"
                app:layout_constraintVertical_bias="1"
                tools:text="@sample/pacotes.json/pacotes/local" />

            <TextView
                android:id="@+id/itempacote_textView_precos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textColor="#93b33e"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/itempacote_imageView_fotoCidade"

                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/itempacote_imageView_fotoCidade"
                app:layout_constraintTop_toBottomOf="@id/itempacote_textView_dias"

                tools:text="@sample/pacotes.json/pacotes/preco" />

            <TextView
                android:id="@+id/itempacote_textView_dias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/itempacote_imageView_fotoCidade"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/itempacote_imageView_fotoCidade"
                app:layout_constraintTop_toBottomOf="@id/itempacote_imageView_fotoCidade"
                tools:text="@sample/pacotes.json/pacotes/dias" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>